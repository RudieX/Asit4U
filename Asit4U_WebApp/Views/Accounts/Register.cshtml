
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

@using (Ajax.BeginForm(new AjaxOptions() { Url = "http://localhost:53594/api/Users/Login", HttpMethod = "POST" }))
{
    @Html.Label("Username")
    @Html.Editor("txtUsername")
    <br />
    @Html.Label("Password")
    @Html.Editor("txtPassword")
    <br />
    @Html.Label("Confirm Password")
    @Html.Editor("txtConfirmPassword")
   // <input type="button" name="btnSubmit" value="Login" onclick="SendRegisterRequest()" />

    <div class="container">
        <!-- Trigger the modal with a button -->
        <button type="button" name="btnSubmit" onclick="SendRegisterRequest()" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal" >Register</button>

        <!-- Modal -->
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Message</h4>
                    </div>
                    <div class="modal-body">
                        <p id="txtMsg"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>

    </div>


}